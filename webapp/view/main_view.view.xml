<mvc:View
    controllerName="f1.f1stat.controller.main_view"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}" class="main-back ">        
					<content />
                        <Text text="Welcome to F1 statistic App." class="welcome"></Text>
                        <FlexBox class="button-middle">
                            <Button text="Drivers" press="onPressDrivers" class="sapUiMediumMarginBegin"></Button>
                            <Button text="Cicuits" press="onPressCircuits" class="sapUiMediumMarginBegin"></Button>
                            <Button text="Seasons" press="onPressSeasons" class="sapUiMediumMarginBegin"></Button>
                            <Button text="Results" press="onPressResults" class="sapUiMediumMarginBegin"></Button>
                        </FlexBox>
                        <Image src="assets/f11.png" class="f1"></Image>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
